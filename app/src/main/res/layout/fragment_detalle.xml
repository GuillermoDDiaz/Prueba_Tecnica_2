<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    tools:context=".fragmets.DetalleFragment"
    >

    <TextView
        android:id="@+id/txtTitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topping"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rw2"
        app:layout_constraintEnd_toEndOf="@+id/rw2"
        app:layout_constraintStart_toStartOf="@+id/rw2"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rw2"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toStartOf="@+id/rw3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitu"

        />


    <TextView
        android:id="@+id/txtTituB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/batter"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rw3"
        app:layout_constraintEnd_toEndOf="@+id/rw3"
        app:layout_constraintStart_toStartOf="@+id/rw3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rw3"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rw2"
        app:layout_constraintTop_toBottomOf="@+id/txtTituB"

        />


</androidx.constraintlayout.widget.ConstraintLayout>